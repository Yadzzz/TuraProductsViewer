@page "/"

<PageTitle>Tura Sales Management</PageTitle>

<div class="page-header">
    <div class="page-title">
        <h3>Tura Sales Management</h3>
    </div>
</div>


<div class="row layout-top-spacing" id="cancel-row">

    <div class="col-md-8 layout-spacing">
        <div class="widget-content widget-content-area br-6">

            <center><h5>Info</h5></center>

            <hr />
            
            @if(this.barcode != null)
            {
                <div style="width:150px; height:45px; float:left;">
                    <img style="width:120px; height:45px; transform:rotate(270deg);" src="data:image/png;base64, @this.barcode" alt="Red dot" />
                <p>@barcode</p>
                </div>
            }
            else
            {
                <p>NULL</p>
            }

            <p> </p>
        </div>
    </div>


    <div class="col-md-4 layout-spacing">
        <div class="widget-content widget-content-area br-6">

            <center><h5>Patchnotes</h5></center>

            <hr />

            <p> </p>

        </div>
    </div>
</div>

@code
{
    string? barcode = null;

    protected override void OnInitialized()
    {
        this.barcode = HtmlDesigner.Barcode.BarcodeGenerator.GetBase64Image("4047443137265");
        this.StateHasChanged();
    }
}
